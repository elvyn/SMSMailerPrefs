<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankit.SMSMailerPrefs.AddReceiverActivity"
    tools:showIn="@layout/activity_add_receiver">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/receiver_email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/receiver_email_hint"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_receiver_button"
        android:id="@+id/add_receiver_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveDetails" />

</RelativeLayout>
